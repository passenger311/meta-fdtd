!
! This is a sample configuration file, that illustrates how the various
! sections are setup.


! -----------------------------------------------------------------------


(GRID
  1             	! partitions
  1000          	! ncyc
  1             	! dt
  1 10	         	! i range
  1 10  	       	! j range
  1 10         		! k range
)GRID


(PML
  1 1 1 1 1 1   	! active pmls
  6			!
  0.5			!
  0.34			!
  0.44			!
)PML


(FDTD

  (OUT
    GPL test2
    Ex S
    1 100 10
    (REG
      (BOX
	 1 100 4 1 100 4 1 100 4
      )BOX
    )REG
  )OUT	

  (OUT
    GPL test4
    Ex S
    1 100 10
  )OUT	

)FDTD
 

! -----------------------------------------------------------------------

(MATSOURCE
  1.0           	! vacuum wavelength in units of [dx]
  1.0	      		! spectral width of vac.wave in units of [dx]
  1.0	      		! gaussian start value as fraction of peak
  2.0 	      		! amplitude = 1.
  .true. 	      	! go over to cw after peak
  .true.	      	! electric/magnetic field source
  1.0 1.0 2.0   	! vector components 
  
  (REG
    (BOX
    5 10 1 1 10 1 -3 53 1	
    10 50 2 1 40 1 1 10 1 
    )BOX
    (POINT
    70 1 13
    1 70 13
    )POINT
  )REG

  (OUT
    GPL test1
    Ex S
    1 100 10
  )OUT

  (OUT
    GPL test2
    Ex S
    1 100 10
    (REG                
      (BOX
      1 50 1 1 100 1 1 100 1
      50 100 1 1 100 1 1 100 1
      )BOX
    )REG
  )OUT

)MATSOURCE


